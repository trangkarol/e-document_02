<% if @document.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t("error.lbl_content", number_error: pluralize(@document.errors.size, "error")) %>
    </div>
    <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
