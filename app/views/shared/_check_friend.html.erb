<h3><%= link_to member.name, member %></h3>
<p class="text-justify"><%= member.email %></p>
<% if check_friend_request?(member, Settings.friend.accept) %>
  <%= link_to t("friend.unfriend"),
    user_friend_path(current_user.id, member),
    method: :delete,
    data: {confirm: t("friend.comfirm_unfriend", name: member.name)},
    class: "button-more-success btn" %>
<% elsif check_friend_request?(member, Settings.friend.request) %>
  <% if @check.first.friend_id == current_user.id %>
    <%= link_to t("accept"),
      user_friend_path(current_user.id, member),
      method: :patch,
      data: {confirm: t("friend.comfirm_accept_friend", name: member.name)},
      class: "button-more-success btn" %>
  <% else %>  
    <%= button_tag t("approving"), class: "button-more-success btn" %>
  <% end %>
  <%= link_to t("cancel"),
    user_friend_path(current_user.id, member),
    method: :delete,
    data: {confirm: t("friend.comfirm_cancel_friend", name: member.name)},
    class: "btn-danger btn" %>
<% else %>
  <%= form_tag user_friends_path(current_user), method: :post do |f| %>
    <%= hidden_field_tag :friend_id, member.id %>
    <%= submit_tag t("add_friend"),
      data: {confirm: t("friend.comfirm_add_friend", name: member.name)},
      class: "button-more-success btn" %>
  <% end %>
<% end %>
