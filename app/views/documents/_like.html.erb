<%= form_tag likes_path, method: :post do %>
  <%= hidden_field_tag :document_id, object.id %>
  <%= button_tag "<i class='fa fa-heart' aria-hidden='true'></i>".html_safe, type: :submit, class: "like-document #{check_like(object, current_user)}" %>
  <span><%= object.number_of_like %></span>
  <% if object.number_of_like > 0 %>
    <span class="<%= no_show_member? root_path %>"><%= list_user object %> <%= t "like.liked" %></span>
    <div class="modal fade <%= no_show_member? root_path %>"
      id="squarespaceModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="modalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">Ã—</span>
              <span class="sr-only"><%= t "close" %></span>
            </button>
            <h3 class="modal-title" id="lineModalLabel">
              <%= t "like.list_member" %>
            </h3>
          </div>
          <div class="modal-body" id="div-like-user">
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

