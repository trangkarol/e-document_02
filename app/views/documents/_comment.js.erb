$(document).ready(function () {
  $(document).on("keypress", ".commet-form", function (e) {
    e.preventDefault();
    if(e.which == 13) {
      var content = $(".commet-form").val();
      console.log(content);
      $.ajax({
        type: 'POST',
        url: "<%= comment_create_path %>",
        beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
        dataType: 'json',
        data: {
          content: content,
          document_id: <%= @document.id %>,
        },
        success:function(data) {
          if (data.status) {
            $("#form_comment").prepend(data.html);
            $(".commet-form").prop("value", "");
          }
        }
    });
    }
  });

  $(document).on("click", "#list-liked", function (e) {
    // $("#squarespaceModal").show();
      $.ajax({
        type: 'GET',
        url: "<%= list_members_liked_path @document.id %>",
        beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
        dataType: 'json',
        success:function(data) {
          $("#div-like-user").html(data.html)
          // if (data.status) {
          //   // $("#form_comment").prepend(data.html);
          //   // $(".commet-form").prop("value", "");
          // }
        }
    });
  });
});
