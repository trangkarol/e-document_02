<div class="form-group">
  <%= f.label :name, t("document.name"), class: "col-md-4" %>
  <div class="col-md-8">
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="clear"></div>
</div>

<div class="form-group">
  <%= f.label :image, t("document.image"), class: "col-md-4" %>
  <div class="col-md-8">
    <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png", id: "images" %>
  </div>
  <div class="clear"></div>
</div>

<div class="form-group">
  <%= f.label :description, t("document.description"), class: "col-md-4" %>
  <div class="col-md-8">
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="clear"></div>
</div>

<div class="form-group">
  <%= f.label :file, t("document.file"), class: "col-md-4" %>
  <div class="col-md-8">
    <%= f.file_field :file, accept: "application/pdf, application/xlsx", id: "file-document" %>
  </div>
  <div class="clear"></div>
</div>

<div class="form-group">
  <%= f.label :file, t("category.name"), class: "col-md-4" %>
  <div class="col-md-8">
    <%= f.collection_select :category_id, list_category, :id, :name ,{:include_blank => "Select one"}, {class: "form-control"} %>
  </div>
  <div class="clear"></div>
</div>

<div class="form-group">
  <%= f.submit @button_text, class: "btn btn-primary col-md-offset-9" %>
</div>
