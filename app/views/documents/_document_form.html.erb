<%= form_for @document, url: documents_create_path, remote: true, class: "form-horizontal", method: "post", multipart: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :name, t("document.name"), class: "col-md-4" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="form-group">
    <%= f.label :image, t("document.image"), class: "col-md-4" %>
    <div class="col-md-8">
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="form-group">
    <%= f.label :description, t("document.description"), class: "col-md-4" %>
    <div class="col-md-8">
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="form-group">
    <%= f.label :file, t("document.file"), class: "col-md-4" %>
    <div class="col-md-8">
      <%= f.file_field :file, accept: "image/jpeg,image/gif,image/png" %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="form-group">
    <%= f.submit @button_text, class: "btn btn-primary col-md-offset-10" %>
  </div>
<% end %>
