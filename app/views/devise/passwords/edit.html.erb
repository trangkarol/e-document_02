<% provide :title, t("user.change_password") %>
<div id="login-page" class="row">
  <div class="col s12 z-depth-6 card-panel">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.hidden_field :reset_password_token %>
      <div class="row">
        <div class="input-field col s12 center">
          <h4 class="btn btn-regiter"><%= t "user.change_password" %></h4>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
          <%= f.label :password, t("user.new_password"), class: "center-align" %><
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <%= f.label :password_confirmation, t("user.comfirm_password"), class: "center-align" %><br />
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 center">
          <%= f.submit t("change"), class: "btn btn-regiter" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

