<% provide :title, t("user.title_forgot_password") %>
<div id="login-page" class="row">
  <div class="col s12 z-depth-6 card-panel">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="row">
        <div class="input-field col s12 center">
          <h4 class="btn btn-regiter"><%= t "user.title_forgot_password" %></h4>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= f.email_field :email, class: "validate", id: "email", autofocus: true %>
          <%= f.label :email, t("user.email"), class: "center-align" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 center">
          <%= f.submit t("accept"), class: "btn btn-regiter" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
