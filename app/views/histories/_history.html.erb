<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="text-center"><%= t "history.stt" %></th>
        <th class="text-center"><%= t "document.image" %></th>
        <th class="text-center"><%= t "history.name_document" %></th>
        <th class="text-center"><%= t "history.size" %></th>
        <th class="text-center"><%= t "history.name_action" %></th>
        <th class="text-center"><%= t "history.number" %></th>
        <th class="text-center"><%= t "history.date" %></th>
      </tr>
    </thead>
      <tbody>
        <% @list_histories.each_with_index do |history, index| %>
          <tr>
            <td class="text-center"><%= index + 1 %></td>
            <td class="image-history"><%= image_tag history.document.image.url, class: "img-responsive" %></td>
            <td><%= link_to history.document.name, user_document_path(@user.id, history.document) %></td>
            <td><%= history.document.file.size %></td>
            <td><%= history.name_action %></td>
            <td><%= history.number %></td>
            <td><%= history.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
  <%= will_paginate @list_histories %>
</div>
